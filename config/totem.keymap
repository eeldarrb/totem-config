        compatible = "zmk,combos";
        require-prior-idle-ms = <120>;

        exclamation {
            bindings = <&kp EXCLAMATION>;
            key-positions = <4 14>;
        };

        at {
            bindings = <&kp AT_SIGN>;
            key-positions = <10 4>;
        };

        num {
            bindings = <&kp HASH>;
            key-positions = <26 27>;
        };

        dollar {
            bindings = <&kp DOLLAR>;
            key-positions = <12 18>;
        };

        percent {
            bindings = <&kp PERCENT>;
            key-positions = <2 13>;
        };

        caret {
            bindings = <&kp CARET>;
            key-positions = <16 7 18>;
        };

        and {
            bindings = <&kp AMPERSAND>;
            key-positions = <26 12>;
        };

        star {
            bindings = <&kp ASTERISK>;
            key-positions = <11 4>;
        };

        left_par {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <13 3>;
        };

        right_par {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <16 6>;
        };

        minus {
            bindings = <&kp MINUS>;
            key-positions = <15 16>;
        };

        plus {
            bindings = <&kp PLUS>;
            key-positions = <13 14>;
        };

        underscore {
            bindings = <&kp LS(UNDERSCORE)>;
            key-positions = <16 17>;
        };

