            key-positions = <13 16>;
        };

        left_curly {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <12 2>;
        };

        right_curly {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <17 7>;
        };

        left_bracket {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <11 1>;
        };

        right_bracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <18 8>;
        };

        semi {
            bindings = <&kp SEMICOLON>;
            key-positions = <28 29>;
        };

        forward_slash {
            bindings = <&kp SLASH>;
            key-positions = <17 27>;
        };

        back_slash {
            bindings = <&kp BACKSLASH>;
            key-positions = <17 29>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <1 2>;
