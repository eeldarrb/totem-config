        left_par {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <13 3>;
            require-prior-idle-ms = <50>;
            timeout-ms = <80>;
        };

        right_par {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <6 16>;
            require-prior-idle-ms = <50>;
            timeout-ms = <80>;
        };

        left_curly {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <2 12>;
            require-prior-idle-ms = <50>;
            timeout-ms = <80>;
